<h2>Video Submissions</h2>
<table class="table table-striped table-responsive timelines">
  <thead>
    <tr>
      <th>Thumb</th>
      <th>User</th>
      <th>Councillor</th>
      <th>Timeline</th>
      <th>Submitted</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @videos.each do |video| %>
    <tr>
      <td><img class="img-responsive" src="//cameratag.com/videos/<%= video.uuid %>/qvga/small_thumb.png"/></td>
      <td><%= video.user ? video.user.email : "" %></td>
      <td><%= video.responses.any? ? video.responses.first.user.email : "" %></td>
      <% if video.responses.any? %>
        <td><%= link_to 'View Timeline', '/videos/' + video.id.to_s + '/timeline'%></td>
      <% else %>
        <td><%= link_to 'Respond', '/responses/new/' + video.id.to_s %></td>
      <% end %>
      <td><%= video.created_at.to_formatted_s(:long_ordinal) %></td>
      <td><%= link_to 'Show', video %></td>
      <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>